<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light">

        <!-- Customize your theme here. -->


    </style>

    <style name="TransparentTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:windowBackground">@null</item>
        <item name="android:actionBarStyle">@style/ActionBarStyle.Transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="ActionBarStyle.Transparent" parent="@android:Widget.ActionBar">
        <item name="android:background">@null</item>
        <item name="android:displayOptions">homeAsUp|showHome|showTitle</item>
        <item name="android:titleTextStyle">@style/ActionBarStyle.Transparent.TitleTextStyle</item>
    </style>

    <style name="ActionBarStyle.Transparent.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ListFrontContent">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:padding">2dp</item>
    </style>

    <style name="ListBackContent">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">@android:color/darker_gray</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="LineNumber">
        <item name="android:padding">5dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">40dp</item>
        <item name="android:shadowColor">@color/text_shadow</item>
        <item name="android:shadowRadius">0.5</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
    </style>

    <style name="Direction">
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@color/holodGrey</item>
        <item name="android:textSize">20dp</item>
        <!-- <item name="android:shadowColor">@color/text_shadow</item>
        <item name="android:shadowRadius">0.5</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item> -->
    </style>

    <style name="TimeLeft">
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@color/holodGrey</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">40dp</item>
       <!-- <item name="android:shadowColor">@color/text_shadow</item>
        <item name="android:shadowRadius">0.5</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item> -->
    </style>

    <style name="StationName">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@android:color/holo_blue_dark</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">6dp</item>
        <item name="android:shadowColor">@color/text_shadow</item>
        <item name="android:shadowRadius">0.5</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
    </style>

    <style name="StationDeparture">
        <item name="android:padding">6dp</item>

    </style>

    <style name="StationListLineNumber">
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/holodGrey</item>
    </style>

    <style name="StationListDirection">
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textColor">@color/holodGrey</item>
    </style>

    <style name="StationListMinutes">
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/holodGrey</item>
    </style>

    <style name="departureText">
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">6dp</item>
        <item name="android:textColor">@color/holodGrey</item>
    </style>

    <style name="min">
        <item name="android:padding">5dp</item>
        <item name="android:color">@color/holoGrey</item>

    </style>

</resources>
